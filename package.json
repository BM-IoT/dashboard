{
  "name": "shield-dashboard",
  "version": "1.0.0",
  "description": "SHIELD Dashboard - IoT sensor monitoring system",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-electron\"",
    "start-backend": "cd backend && ../.venv/bin/python app.py",
    "start-electron": "electron . --dev",
    "build": "electron-builder",
    "build-backend": "cd backend && python -m pip install -r requirements.txt",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "chart.js": "^4.4.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^2.30.0",
    "socket.io-client": "^4.7.2"
  },
  "build": {
    "appId": "com.shield.dashboard",
    "productName": "SHIELD Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "backend/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/",
        "to": "backend/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "author": "SHIELD Team",
  "license": "MIT"
}
